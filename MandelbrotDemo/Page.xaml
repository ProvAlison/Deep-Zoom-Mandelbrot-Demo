<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="MandelbrotDemo.Page"
    >
    <Grid x:Name="LayoutRoot" Background="Black">
        <MultiScaleImage x:Name="MSI" ViewportWidth="1.2" ViewportOrigin="-0.1,0.0" MouseLeftButtonDown="MSI_MouseLeftButtonDown" MouseLeftButtonUp="MSI_MouseLeftButtonUp" MouseMove="MSI_MouseMove" MouseLeave="MSI_MouseLeave" />
        <Slider x:Name="BlueSlider" Width="300" Height="20"
            Background="Blue" Maximum="100" Minimum="0"    
            Canvas.Left="30" Canvas.Top="240"
            ValueChanged="BlueSlider_ValueChanged" Margin="7,357,579,509" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <Slider.RenderTransform>
                <CompositeTransform Rotation="-90"/>
            </Slider.RenderTransform>
        </Slider>

        <Slider x:Name="RedSlider" Width="300" Height="20"
            Background="Red" Maximum="100" Minimum="0"              
            Canvas.Left="30" Canvas.Top="240"
            ValueChanged="RedSlider_ValueChanged" Margin="158,34,165,569"/>


    </Grid>

</UserControl>
